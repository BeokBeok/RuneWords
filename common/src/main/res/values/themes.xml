<resources>
    <!-- Base application theme. -->
    <style name="Theme.RuneWords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RuneWords.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#00D8FF</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>

        <item name="postSplashScreenTheme">@style/Theme.RuneWords</item>
    </style>
</resources>
